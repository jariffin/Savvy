
<div class="nested-fields">
  <div class="row">
    <div class="col-md-6">
      <%= f.association :material, collection: Material.order('name ASC')  %>
    </div>
    <div class="col-md-6">
      <%= f.input :percentage_material, as: :integer %>
    </div>
    <% if @blend.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@blend.errors.count, "error") %></h2>
        <ul>
        <% @blend.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <%= link_to_remove_association "remove blend", f %>
</div>
