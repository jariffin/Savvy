<div class="container">
  <div class="content">
    <div class="cards">
      <% @purchases.each do |purchase| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(purchase.photo.key, width: 300, height: 400, crop: :fill) if purchase.photo.attached? %>')">
          <%= link_to purchase.name, purchases_path(purchase) %>
        </div>
      <% end %>
        <%= link_to purchases_path(@purchase),
          method: :delete,
          data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>
