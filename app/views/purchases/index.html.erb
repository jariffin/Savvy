<div class="main-container">
  <div class="title">
    <h1>My Closet <i class="fas fa-seedling"></i>
      <i class="fas fa-globe-africa"></i>
      <i class="fas fa-barcode"></i>
    </h1>
    <h2>Very SAVVY. You are <b><%=@average.round(2)%>%</b> eco-friendly.</h2>
  </div>

  <div class="container" style="background-image: url('<%= cl_image_path("boris-misevic-atijctuqUl8-unsplash_fq47r4") %>')">
    <div class="cards">
      <% @purchases.each do |purchase| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(purchase.photo.key, width: 300, height: 400, crop: :fill) if purchase.photo.attached? %>')">
        <div class="card-title">
          <h3>
            <%= purchase.garment.name %>
          </h3>
        </div>
        <div class="card-info-1">
          <p> Eco-Rating: <%=purchase.garment.percentage%>%</p>
        </div>
        <div class="card-info-2">
          <p> Brand: <%= purchase.garment.brand.name %> </p>
        </div>
        <div class="btn-delete">
          <%= link_to purchase_path(purchase),
          method: :delete,
          data: { confirm: "Delete this purchased item?" } do %>
          <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
