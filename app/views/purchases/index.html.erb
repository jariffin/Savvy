<!-- to be changed to this in the process as soon as the flow works / db with pictures -->
<div class="main-container">
  <div class="container mt-3" style="background-image: url('<%= cl_image_path("boris-misevic-atijctuqUl8-unsplash_fq47r4") %>')">
    <div class="cards">
      <% @purchases.each do |purchase| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(purchase.photo.key, width: 300, height: 400, crop: :fill) if purchase.photo.attached? %>')">
        <h3>
          <%= purchase.garment.name %>
        </h3>
        <%= link_to purchase_path(purchase),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash"></i>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
